<div class="container mb-3 mt-3" >
  <!-- at the end of the body -->
  <% @event_spaces.each do |space| %>
    <div class="card mb-3" style="width: 40rem;">
      <div class="col-sm-12">
        <img class="card-img-top" src=<%=space.photos.attached? ? cl_image_path(space.photos.first.key) : "http://source.unsplash.com/featured/?#{space.location}&#{rand(1000)}/400x333"%> >
        <div class="card-body">
          <h2 class="card-title"><%= link_to space.name,  event_space_path(space), style: 'color: orange;text-decoration:none;' %></h2>
          <p class="card-text"><%= space.location.capitalize %></p>
          <p class="card-text">Â¥<%= space.price%></p>
          <p class="card-text"><%= space.description%></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class ="container">
  <div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>

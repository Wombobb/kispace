<%= form_tag(search_path, :method => "get") do %>
  <div class="input-group">
    <%= search_field_tag :search, params[:search], placeholder: "Type", class: "form-control" %>
    <div class="input-group-btn">
      <%= button_tag "Search for Location", class: "form-control", :name => nil%>
    </div>
  <% end %>
</div>
<div class="container mr-md-3 mt-3" >
  <!-- at the end of the body -->
  <% @event_spaces.each do |space| %>
    <div class="card mb-3" style="width: 40rem;">
      <div class="col-sm-12">
        <img class="card-img-top" src=<%="http://source.unsplash.com/featured/?#{space.location}&#{rand(1000)}/800x333"%> >
        <div class="card-body">
          <h2 class="card-title"><%= link_to space.name,  event_space_path(space), style: 'color: gray;text-decoration:none;' %></h2>
          <p class="card-text"><%= space.location %></p>
          <p class="card-text"><%= space.price%></p>
          <p class="card-text"><%= space.description%></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

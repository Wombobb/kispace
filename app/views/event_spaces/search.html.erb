<%= link_to '<- Back', event_spaces_index_path, class: 'btn btn-light'  %>
<h3>Search Results
  <h3>
    <div class="container mr-md-3 mt-3" >
      <!-- at the end of the body -->
      <% @results.each do |result| %>
        <div class="card mb-3" style="width: 40rem;">
          <img class="card-img-top" src=<%="http://source.unsplash.com/featured/?#{result.location}&#{rand(1000)}/800x333"%> >
          <div class="card-body">
            <h2 class="card-title"><%= link_to result.name,  event_space_path(result), style: 'color: gray;text-decoration:none;' %></h2>
            <p class="card-text"><%= result.location %></p>
            <p class="card-text"><%= result.price%></p>
            <p class="card-text"><%= result.description%></p>
          </div>
        </div>
      <% end %>
    </div>

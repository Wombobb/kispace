            <div class="card-body">
              <h2 class="card-title"><%= link_to result.name,  event_space_path(result), style: 'color: orange;text-decoration:none;' %></h2>
              <p class="card-text"><%= result.location.capitalize %></p>
              <p class="card-text">Â¥<%= result.price.to_i%></p>

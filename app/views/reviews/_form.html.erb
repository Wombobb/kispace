<div class="container mt-4">
  <h2>Create a review</h2>
  <%= simple_form_for [@event_space, @review] do |f| %>
    <%= f.input :comment %>
    <div class="star-rating">
      <% 5.times do |i| %>
        <input type="radio" name="review[rating]" value="<%= i + 1 %>" <%= "checked" if i == 2 %>>
      <% end %>
    </div>
    <div></div>
    <%= f.submit %>
  <% end %>
</div>
